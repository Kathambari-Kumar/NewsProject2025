@using Microsoft.CognitiveServices.Speech;
@using Microsoft.CognitiveServices.Speech.Audio;
@using Microsoft.CognitiveServices.Speech.Translation;

<h5>Speech To Text</h5>
<div class="row">
    <div class="col-xl-8">
        <input type="text" id="speechText" />
        <button onclick="ClickForSpeech()">Click to Speak</button>
    </div>
</div>

<script>
    
    document.getElementById("speechText").addEventListener("change", display);

    function display() {
        alert("Displayed the input");
    }

</script>