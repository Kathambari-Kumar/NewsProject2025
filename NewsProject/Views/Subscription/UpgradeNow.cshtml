@using Microsoft.AspNetCore.Identity
@using NewsProject.Models.DB

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var message = TempData["Message"];
    var name = UserManager.FindByEmailAsync(User.Identity.Name).Result;
    var fullname = name.FirstName + " " + name.LastName;
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @if (message == "success")
        {
            <div class="alert alert-@message align-items-center" role="alert">
                <h4 class="alert-heading">Digital Dragons</h4>
                <h5>Dear @fullname,</h5>
                <h6>
                    Subscription Upgrade successful!
                    Enjoy your subscription extended period.
                    You will receive a confirmation email shortly!
                </h6>
            </div>
        }
        else if (message == "danger")
        {
            <div class="alert alert-@message align-items-center" role="alert">
                <h4 class="alert-heading">Digital Dragons</h4>
                <h5>Dear @fullname, </h5> 
                    <h6>We regret to inform you that your recent payment 
                        attempt was unsuccessful.</h6>
            </div>
        }
    </div>
</div>
<hr />