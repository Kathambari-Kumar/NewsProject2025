@model NewsProject.Models.DB.SubscriptionType

@{
    ViewData["Title"] = "DeleteSubscriptionType";
}


<hr />
<div class="row">
    <div class="col-xl-9 col-md-9">
        <h5 id="font" class="justify-content-end text-danger">Delete a subscription plan</h5>
    </div>
    <div class="col-xl-3 col-md-3">
        <a class="btn bg-success bd-gradient float-end fonttype" asp-controller="Admin" asp-action="AddSubscriptionType">Back</a>
    </div>
</div>
<hr />
<div id="font" class="row justify-content-center border border-1" style="background-color:whitesmoke">
    <div class="col-md-6">
<h5>Are you sure you want to delete this subscription type?</h5>
   <hr />
    <form asp-action="DeleteSubscriptionType" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TypeName" class="control-label"></label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        <input type="submit" value="Delete" class="btn bg-success w-100 bg-gradient text-white" />
    </form>
    </div>
</div>
<hr />
 