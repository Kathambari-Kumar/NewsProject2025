@model IEnumerable<NewsProject.Models.VM.SubscriptionsListVM>

@{
    ViewData["Title"] = "SubscriptionChart";
    var userCountList = TempData["UserCountList"];
    var monthNameList = TempData["MonthNameList"];
}
<hr />
<div class="row">
    <div class="col-md-6 text-danger fw-bold"><h5>Subscription Statistics </h5></div>
    <div class="col-md-3">
        <a class="btn fw-bold bg-success float-end bg-gradient" onclick="ViewChart()">View in Chart</a>
    </div>
</div>
<hr />
<table id="articletable" class="table table-bordered table-success">
    <thead>
        <tr>
            <th class="text-center" style="width:130px">UserName</th>
            <th class="text-center" style="width:200px">Subscription Type</th>
            <th class="text-center" style="width:50px">Price</th>
            <th class="text-center" style="width:150px">Created On</th>
            <th class="text-center" style="width:150px">Expires On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.SubscriptionType</td>
                <td>@item.Price</td>
                <td>@item.Created.ToLongDateString()</td>
                <td>@item.Expiry.ToLongDateString()</td>
            </tr>
        }
    </tbody>
</table>
<hr />
<div class="row">
    <div class="col-md-6">
        <h3>BarChart</h3>
        <canvas id="myChart" style="width:200px;height:300px">
        </canvas>
    </div>
    <p id="userCountList" hidden>@userCountList</p>
    <p id="monthNameList" hidden>@monthNameList</p>
</div>

