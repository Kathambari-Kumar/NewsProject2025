@model IEnumerable<NewsProject.Models.VM.BriefNewsVM>

@* View component view for Culture *@




    <div id="Titlebar" class="mt-lg-2 mt-5">
        <p class="h6 text-white fonttype mt-lg-2 ms-lg-2">Culture</p>
    </div>
    @foreach (var category in Model)
    {
        <div class="row mx-lg-2 mt-lg-2" id="Body_BG">
        @foreach (var article in category.ArticleList)
        {
            <div class="col-md-12 position-static fonttype">
                <a class="border-0" asp-controller="NewsArticle" asp-action="DetailNewsDisplay" asp-route-id="@article.Id">
                    <p style="font-size:16px;font-weight:bold">@article.LinkText</p>
                </a>
            </div>
            <div class="col-md-6 position-static">
                <p class="pt-lg-2">
                    @article.ContentSummary
                    <a class="border-0" asp-controller="NewsArticle" asp-action="DetailNewsDisplay" asp-route-id="@article.Id">Read More...</a>
                </p>
            </div>
            <div class="col-md-6 pb-lg-2 pt-lg-1">
                <img src="@article.ImageLink" class="Image" alt="Article Image">
            </div>
            <hr class="line" />
        }
        </div>
    }


<style>
    /* Dashed red border */
    hr.line {
        border-top: 1px dashed red;
    }

    .Image {
        width: 100%;
        height: 200px;
    }

    #Body_BG {
        background-color: ghostwhite;
        font-size: 16px;
        font-family: Bahnschrift;
    }

    #TitleBar {
        height: auto;
        background-color: darkolivegreen;
        opacity: 0.8;
        max-width: 100%;
        font-size: 16px;
        font-family: Bahnschrift;
    }
</style>




