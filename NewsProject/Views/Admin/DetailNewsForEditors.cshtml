@{
}
<hr />
<div class="row">
    <div class="col-xl-9 col-md-9">
        <h5 id="font" class="justify-content-end text-danger">Detailed News</h5>
    </div>
    <div class="col-xl-3 col-md-3">
        <a class="btn bg-success bd-gradient fonttype float-end" asp-controller="Admin" asp-action="EditorsChoiceList">Back</a>
    </div>
</div>
<hr />

<section class="">

    <div class="container-fluid px-0">
        <div class="row g-0 justify-content-center">
            <!-- First column -->
            <div class="col-xl-8 col-lg-7 col-md-7 col-sm-12 min-vh-100 pe-3 mt-2 mt-2">              
                <div id="Titlebar" class="text-white px-2 pt-lg-2 pb-lg-2 mb-lg-3">
                    @Model.CategoryName
                </div>

                <div>
                    <img src="@Model.ImageLink" style="width:100%; height:auto;" />
                </div>
                <div id="DateStamp"> @Model.DateStamp.ToLongDateString(),  @Model.Continent</div>
                <hr />
                <div id="Author_leftwidth">&nbsp; Author : @Model.AuthorName</div>
                <div id="Linktext" class="mt-2">
                    <h3>@Model.LinkText</h3>
                </div>
                <div id="Content" class="">
                    <strong>@Model.ContentSummary</strong>
                    @Model.Content
                </div>                
            </div>
        </div>
    </div>
</section>
<hr />

<style>
    #Heading {
        color: red;
        text-align: left;
        margin-top: 0px;
        font-family: Bahnschrift;
    }

    #Titlebar {
        background-color: dimgrey;
        border: 1px solid;
        border-left-color: red;
        border-left-width: 7px;
        font-size: 16px;
        font-family: Bahnschrift;
        height: auto;
    }

    #Linktext {
        color: blue;
        font-size: 25px;
        font-family: Bahnschrift;
        text-decoration: none;
        text-align: left;
    }

    #DateStamp {
        color: darkolivegreen;
        opacity: 0.8;
        font-family: Bahnschrift;
        padding-left: 11px;
    }

    #Content {
        font-family: Bahnschrift;
        justify-content: center;
        text-align: justify;
        white-space: pre-line;
        padding-left: 0px;
    }

    #Author_leftwidth {
        border: 1px solid white;
        border-left-color: dimgray;
        border-left-width: 4px;
        font-family: Bahnschrift;
        color: blue;
    }

    .img-fluid {
        width: 100%;
        height: 230px;
        padding: 0px 5px 0px 5px;
    }

</style>